<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:padding="32dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luke"
                    android:textColor="#212121"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="2nd Floor"
                    android:textColor="#757575"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:30"
                    android:textColor="#424242"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/current_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Monday, September 23, 2025"
                    android:textColor="#616161"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Connected"
                    android:textColor="#757575"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Status Container -->
        <LinearLayout
            android:id="@+id/status_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4CAF50"
            android:elevation="8dp"
            android:orientation="vertical"
            android:padding="96dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/room_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AVAILABLE"
                        android:textColor="@android:color/white"
                        android:textSize="72sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/next_available"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Next meeting at 15:30"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"
                        android:alpha="0.9" />

                </LinearLayout>

            </LinearLayout>

            <!-- Current Meeting Details -->
            <LinearLayout
                android:id="@+id/current_meeting_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="#000000"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:alpha="0.25"
                android:visibility="gone">

                <TextView
                    android:id="@+id/current_meeting_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team Meeting"
                    android:textColor="@android:color/white"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:padding="0dp" />

                <TextView
                    android:id="@+id/current_meeting_organizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="John Doe"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:alpha="0.95" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/current_meeting_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:00 - 15:00"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:alpha="0.95" />

                    <TextView
                        android:id="@+id/current_meeting_attendees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:text="8 attendees"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:alpha="0.95" />

                </LinearLayout>

                <TextView
                    android:id="@+id/remaining_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingTop="16dp"
                    android:text="25 minutes remaining"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!-- Schedule -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="24dp">

            <ListView
                android:id="@+id/today_schedule_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/transparent"
                android:dividerHeight="12dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>